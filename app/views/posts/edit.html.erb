<%= render partial: 'posts/posts_navbar' %>
  
<%= link_to "all posts", posts_path %>
<%= link_to "del", @post, confirm: 'are you sure?', method: :delete %>

<%= form_for @post do |f| %>
  <p>
    <%= f.label :date %><br>
    <%= f.date_field :date %>
  </p>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :outline %><br>
    <%= f.text_area :outline %>
  </p>
  <p>
    <%= f.label :summary %><br>
    <%= f.text_area :summary %>
  </p>
  <p>
    <%= link_to "New section (text, code, video, image)", new_section_path %>
  </p>
  <%= f.submit %>
<% end %>