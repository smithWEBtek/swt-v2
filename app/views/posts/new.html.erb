<h1>Post New</h1>

<%= form_for @post do |f| %>
  <p>
    <%= f.label :date %><br>
    <%= f.date_field :date %>
  </p>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :outline %><br>
    <%= f.text_area :outline %>
  </p>
  <p>
    <%= f.label :contents %><br>
    <%= f.fields_for :post_sections do |post_sections_form| %>
      <%= post_sections_form.text_area :content %><br>
    <% end %>
  </p>
  <p>
    <%= f.label :summary %><br>
    <%= f.text_area :summary %>
  </p>
  <%= f.submit %>
<% end %>