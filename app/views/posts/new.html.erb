<%= render partial: 'posts/posts_navbar' %>

<h3>Post New</h3>

<%= form_for @post do |f| %>
  <p>
    <%= f.label :date %><br>
    <%= f.date_field :date %>
  </p>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :outline %><br>
    <%= f.text_area :outline %>
  </p>
  <p>
    <%= f.label :summary %><br>
    <%= f.text_area :summary %>
  </p>
  <p>
    <%= link_to "New section (text, code, video, image)", new_section_path %>
  </p>
  <%= f.submit %>
<% end %>