<%= render partial: 'posts/posts_navbar' %>

<%= link_to "all posts", posts_path %>

<h3>New Post Section</h3>

<%= form_for @post do |f| %>
  <p>
    <%= f.label :post %><br>
    <%= f.collection_select :post_id, Post.all, :id, :title %>
  </p>
  <p>
    <%= f.label :format %><br>
    <%= f.text_area :format %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <%= f.submit %>
<% end %>